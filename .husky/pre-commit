#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo 'Running pre-commit hook...'

yarn lint-staged

## Checking formatting
yarn check-format || (
    echo 'Prettier formatting check failed.'
    exit 1
)

## Check tsconfing standards
yarn check-types || (
    echo 'TypeScript check failed.'
    exit 1
)

yarn build || (
    echo 'Build failed.'
    exit 1
)

## Check for uncommitted changes
yarn check-lint || (
    echo 'TypeScript lint check failed.'
    exit 1
)